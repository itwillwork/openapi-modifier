{
  "name": "example-express-openapi-validator",
  "version": "1.0.0",
  "description": "Example of Express server with express-openapi-validator and openapi-modifier",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node --files src/index.ts",
    "build": "tsc",
    "prepare-openapi": "openapi-modifier --input=specs/openapi.json --output=specs/prepared-openapi.json --config=openapi-modifier.config.ts",
    "postinstall": "npm run prepare-openapi",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-openapi-validator": "^5.5.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "openapi-modifier": "file:../../",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  }
}

